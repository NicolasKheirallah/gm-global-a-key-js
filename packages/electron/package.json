{
  "name": "@gm-key/electron",
  "version": "1.0.0",
  "description": "GM Key Tools Desktop App",
  "author": "Antigravity",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "pack": "tsc && electron-builder --dir",
    "dist": "tsc && electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "28.2.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.gmkey.tools",
    "productName": "GM Key Tools",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "../web/dist/**/*"
    ]
  }
}
